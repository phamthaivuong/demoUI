<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_sign_up"
    tools:context=".User.SignUp.SignUp_Activity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/text_Login"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/toolbar"
        android:text="Create a password"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_Email"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:text="PASSWORD"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/text_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="@color/colorWhite"
        android:id="@+id/edt_Email"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/custom_edittext_bottom"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/password_email_login"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Email"
        android:layout_marginLeft="40dp"/>
    <LinearLayout
        android:layout_marginTop="85dp"
        android:layout_below="@id/edt_Email"
        android:id="@+id/linner2"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/btnNext"
            android:textStyle="bold"
            android:gravity="right"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:textSize="15dp"
            android:drawableRight="@drawable/next_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>